<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <!-- adding new property which take values [up - down - none ] to round the price of catalog rule    -->
    <table name="catalogrule">
        <column xsi:type="varchar" name="rounding_type" nullable="true" length="255" comment="Rounded Up or Down"/>
    </table>
</schema>
