<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="actions">
        <field name="rounding_type" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="value" xsi:type="string">none</item>
                    <item name="source" xsi:type="string">catalog_rule</item>
                    <item name="notice" xsi:type="string" translate="true">Round discount price to the rounded up integer or rounded down integer</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Rounding type</label>
                <dataScope>rounding_type</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="HimaMage\RoundedDiscountPrice\Model\Rule\Action\RoundingTypeProvider"/>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
</form>
